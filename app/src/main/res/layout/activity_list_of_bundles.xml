<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="1"
        tools:context=".ListOfBundlesActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="List of bundles"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:id="@+id/textview_title_1"/>


        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add bundle"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:id="@+id/button_add_bundle"/>


        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="123dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textview_title_1"
                android:layout_above="@+id/button_add_bundle"
                android:padding="10dp">


            <ListView
                    android:id="@+id/listview_bundles"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">
            </ListView>

        </FrameLayout>


    </RelativeLayout>


</LinearLayout>